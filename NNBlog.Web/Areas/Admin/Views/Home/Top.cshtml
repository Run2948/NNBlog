@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="/adminstyle/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
        $(function () {
            //顶部导航切换
            $(".nav li a").click(function () {
                $(".nav li a.selected").removeClass("selected");
                $(this).addClass("selected");
            });
        })
    </script>

</head>
<body style="background:url(/adminstyle/images/topbg.gif) repeat-x;">
    <div class="topleft">
        <a href="javascript:void(0);" target="_parent">@*main.html*@
            <img src="/adminstyle/images/logo.png" title="系统首页" alt="" />
        </a>
    </div>
    <ul class="nav">
        <li>
            <a href="javascript:void(0);" target="rightFrame" class="selected">@*default.html*@
                <img src="/adminstyle/images/icon01.png" title="工作台" alt="" />
                <h2>工作台</h2>
            </a>
        </li>
        <li>
            <a href="javascript:void(0);" target="rightFrame">@*imgtable.html*@
                <img src="/adminstyle/images/icon02.png" title="模型管理" alt="" />
                <h2>模型管理</h2>
            </a>
        </li>
        <li>
            <a href="javascript:void(0);" target="rightFrame">@*imglist.html*@
                <img src="/adminstyle/images/icon03.png" title="模块设计" alt="" />
                <h2>模块设计</h2>
            </a>
        </li>
        <li>
            <a href="javascript:void(0);" target="rightFrame">@*tools.html*@
                <img src="/adminstyle/images/icon04.png" title="常用工具" alt="" />
                <h2>常用工具</h2>
            </a>
        </li>
        <li>
            <a href="javascript:void(0);" target="rightFrame">@*computer.html*@
                <img src="/adminstyle/images/icon05.png" title="文件管理" alt="" />
                <h2>文件管理</h2>
            </a>
        </li>
        <li>
            <a href="javascript:void(0);" target="rightFrame">@*tab.html*@
                <img src="/adminstyle/images/icon06.png" title="系统设置" alt="" />
                <h2>系统设置</h2>
            </a>
        </li>
    </ul>
    <div class="topright">
        <ul>
            <li>
                <span>
                    <img src="/adminstyle/images/help.png" title="帮助" class="helpimg" alt="" />
                </span>
                <a href="#">帮助</a>
            </li>
            <li><a href="#">关于</a></li>
            <li><a href="/admin/home/logout" target="_parent">退出</a></li>@*login.html*@
        </ul>
        <div class="user">
            <span>@ViewBag.UserName</span>
            <i>消息</i>
            <b>0</b>
        </div>
    </div>
</body>
</html>
