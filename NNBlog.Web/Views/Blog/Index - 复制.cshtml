                                            {
                                                DateTime d = DateTime.Parse(month + "-01");
                                                string cond = $"CreateDate >= '{d:yyyy-MM-dd}' and CreateDate < '{d.AddMonths(1):yyyy-MM-dd}'";
                                                var blogCount = blogdal.CalcCount(cond);
                                                if (blogCount > 0)
                                                {
